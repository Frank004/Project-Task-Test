<%= simple_form_for @project_task, :html => { :class => "form-horizontal project_task" } do |f| %>

  <% if @project_task.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@project_task.errors.count, "error") %> prohibited this project_task from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @project_task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-md-4">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-md-4">
      <%= f.text_area :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
        <%= f.label :schedule, :class => 'control-label col-lg-2' %>
      <div class="col-md-4">
        
      <%= f.input :schedule, as: :schedule %>
      </div>
    <%=f.error_span(:schedule) %>
  </div>


  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                project_tasks_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
