<%- model_class = ProjectTask -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @project_task.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @project_task.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:completed) %>:</strong></dt>
  <dd><%= @project_task.completed %></dd>
</dl>
<%= @project_task.schedule %>
<dl class="dl-horizontal">
<dt>Duration:</dt>
<dd><%= @project_task.schedule.duration %></dd>
<br/>
<dt>Schedule:</dt>
<dd><%= @project_task.schedule %></dd>
<br/>
<dt>Upcomming Events:</dt>

 <dd><% @project_task.schedule.first(10).each do |e| %>
  <br/>
  <%= link_to e.to_s, @project_task%>
<% end %>
</dd>
</dl>
<br />

<%= link_to t('.back', :default => t("helpers.links.back")),
              project_tasks_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_project_task_path(@project_task), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              project_task_path(@project_task),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
